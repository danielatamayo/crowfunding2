<%= content_for :page_title, 'Crowfunding' %>
<div class="container">
  <div class="row topspace-lg">
    <div class="col-md-6 col-md-offset-3">
      <h1 class="text-center">Create a fundraiser</h1>
      <div class="topspace-lg">
        <%= render 'layouts/messages' %>
        <div class="panel panel-default topspace shadow-sm">
          <div class="panel-body">
            <%= form_for @campaign do | fundraiser | %>
              <div class="form-group">
                <%= fundraiser.label :title, "Title" %>
                <%= fundraiser.text_field :title, class: "form-control input-lg", placeholder: "Anything!", value: @campaign.title %>
              </div>
              <div class="form-group">
                <%= fundraiser.label :goal, "Goal ($10 - $1,000,000)" %>
                <div class="input-group">
                  <span class="input-group-addon">$</span>
                  <%= fundraiser.text_field :goal, class: "form-control input-lg", placeholder: "50.00", value: @campaign.goal %>
                </div>
              </div>
              <div class="form-group">
                <%= fundraiser.label :description, "Description" %>
                <%= fundraiser.text_area :description, class: "form-control input-lg", placeholder: "Little description of your fundraiser...", value: @campaign.description, rows: 4 %>
              </div>
              <div class="form-group">
                <%= fundraiser.label :image, "Select an image for your fundraiser" %>
                <%= render 'images' %>
                <%= fundraiser.hidden_field :image, value: @campaign.image  %>
              </div>
              <div class="form-group">
                <%= fundraiser.button "Create Fundraiser", class: "btn btn-primary btn-lg btn-block btn-custom", data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> Creating fundraiser..."} %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
