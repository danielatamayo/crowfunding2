<div class="panel panel-default panel-payment">
  <div class="panel-body">
    <form action="/charges" method="POST" id="checkout_form">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <div class="row">
        <div class="col-md-12">
          <div class="form-group">
            <label>Cardholder Name</label>
            <input class="form-control input-lg" id="name" name="name" type="text" data-stripe="name" placeholder="Name">
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <div class="form-group">
            <label>Donation amount</label>
            <input class="form-control input-lg" id="amount" name="amount" type="text" placeholder="$15.00">
          </div>
        </div>
      </div>
      
      <input type="hidden" id="stripeToken" name="stripeToken" />
      <input type="hidden" name="campaign" value="<%= @campaign.id %>">
      <button id="checkoutBtn" class="btn btn-lg btn-block btn-custom btn-purple">Make a donation</button>
    </form>
  </div>
</div>

